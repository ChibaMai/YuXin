a {
  color: #ab3300;
}

a:hover {
  color: #fc6423;
}

#live2d {
  display: none;
}

table {
  margin: 20px 0;
  width: 100%;
  border-collapse: collapse;
  border-spacing: 0;
  border: 1px solid #ddd;
  font-size: 14px;
  table-layout: fixed;
  word-wrap: break-all;
}

.post-body thead {
  display: none;
}

table>tbody>tr:nth-of-type(odd) {
  background-color: #f9f9f9;
}

td {
  border-bottom-width: 1px;
}

tr {
  transition: background-color .17s;
}

td:first-child {
  width: 130px;
  font-weight: 700;
  color: #ff9800;
}

table>tbody>tr:hover {
  background-color: #f5f5f5;
}

.highlight td {
  width: auto;
}

#aplayer-fixed {
  display: none;
}

.aplayer.aplayer-fixed {
  display: none;
}
